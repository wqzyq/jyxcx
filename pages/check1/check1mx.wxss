/* pages/hetong/htmingxi.wxss */

.head {
  width: 100%;
  height: 100rpx;
  background-color: deepskyblue;
  color: white;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  letter-spacing: 10rpx;
}

.txtkh {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
}

.line {
  margin-top: 10rpx;
  width: 100%;
  height: 8rpx;
  background: rgb(237, 236, 232);
}

.radio {
  margin-left: 100rpx;
}

.btncs {
  margin-top: 30rpx;
}

.navht {
  margin-top: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  height: 75rpx;
  color: white;
  line-height: 75rpx;
  font-size: 35rpx;
  background-color: blueviolet;
}

/*表格设置*/

.table {
  margin-top: 15rpx;
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.radio-group {
  margin-left: 70rpx;
}

.ravalue {
  margin-left: 50rpx;
}

.td {
  font-size: 35rpx;
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 35rpx;
  font-weight: bold;
}
