    <view class='line'></view>
    <!--提货情况-->
    <radio-group name='fhfs' class="radio-group">
      <label class="radio" wx:for="{{thitems}}" wx:key="{{index}}">
        <radio class="ravalue" value="{{item.name}}" checked="{{item.checked}}" />{{item.name}}
      </label>
    </radio-group>
    <view class='line'></view>
    <view class='selpro'>   
      <picker name='cpname' bindchange="cpPickerChange" value="{{cps[cpId]}}" range="{{cps}}">
        <view class="picker1">
          {{cps[cpId]}}
        </view>
      </picker>
      <button class='pickadd' bindtap='btntest' type="primary">增加产品</button>
    </view>
    <!--产品显示-->
    <view class="table">
      <view class="tr bg-w">
        <view class="th">产品</view>
        <view class="th">数量</view>
        <view class="th">单价</view>
        <view class="th">金额</view>
        <view class="th">仓库</view>
        <view class="th">操作</view>
      </view>
    </view>
  
    <block wx:for="{{listData}}" wx:key="unique">
    <view wx:if="{{listData.length > 1}}"> <view class="tr bg-g">
        <view class="td">
          <input name='PrName' value='{{item.prName}}'></input>
        </view>
        <view class="td">0</view>
        <view class="td">
          <input name='sl{{item.id}}' value='0'></input>
        </view>
        <view class="td">
          <input value='0' name='dj{{item.id}}'></input>
        </view>
        <view class="td">
          <input value='0' name='je{{item.id}}'></input>
        </view>
        <view class="td">
          <text class='delete-btn' data-idx='{{index}}' bindtap='deleteIitems'>删除</text>
        </view>
      </view></view>   
    <view wx:else>  暂未添加产品 </view>    
